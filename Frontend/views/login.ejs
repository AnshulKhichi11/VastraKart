<%- include('partials/header', { title: title }) %>
<%- include('partials/navbar') %>

<main class="auth-container">
 <div class="auth-form">
 <h2>Login</h2>
        <% if (typeof flashMessages !== 'undefined' && flashMessages.length > 0) { %>
            <% Object.keys(flashMessages).forEach(type => { %>
                <% flashMessages[type].forEach(message => { %>
                    <div class="flash-message <%= type %>">
                        <%= message %>
                    </div>
                <% }); %>
            <% }); %>
        <% } %>
 <form action="/auth/login" method="POST">
 <div class="form-group">
 <label for="identifier">Email or Mobile Number:</label>
 <input type="text" id="identifier" name="identifier" required placeholder="Enter your email or 10-digit mobile number">
</div>
<div class="form-group">
<label for="password">Password:</label>
 <input type="password" id="password" name="password" required>
</div>
 <button type="submit" class="btn1 btn-primary">Login</button>
</form>
 <p>Don't have an account? <a href="/auth/signup">Sign Up here</a></p>
 </div>
</main>

<%- include('partials/footer') %>