<%- include('partials/header', { title: title }) %>
<%- include('partials/navbar') %> 

<main class="form-container">
    <div class="form-card">
        <h2>Add New Dress to <%= store.name %></h2>
        <form action="/dresses/add" method="POST">
            <input type="hidden" name="storeId" value="<%= store._id %>">

            <div class="form-group">
                <label for="name">Dress Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="price">Price (â‚¹):</label>
                <input type="number" id="price" name="price" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label for="mainImage">Main Image URL:</label>
                <input type="url" id="mainImage" name="mainImage" required placeholder="e.g., https://example.com/dress.jpg">
            </div>
            <div class="form-group">
                <label for="otherImages">Other Image URLs (comma-separated):</label>
                <input type="text" id="otherImages" name="otherImages" placeholder="e.g., img1.jpg, img2.jpg">
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <input type="text" id="category" name="category" placeholder="e.g., Ethnic Wear, Casual, Formal">
            </div>
            <div class="form-group">
                <label for="sizes">Sizes (comma-separated, e.g., S, M, L, XL):</label>
                <input type="text" id="sizes" name="sizes" placeholder="e.g., S,M,L">
            </div>
            <div class="form-group">
                <label for="colors">Colors (comma-separated, e.g., Red, Blue, Green):</label>
                <input type="text" id="colors" name="colors" placeholder="e.g., Red,Blue">
            </div>
            <button type="submit" class="btn btn-primary">Add Dress</button>
        </form>
    </div>
</main>

<%- include('partials/footer') %>